<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/serviceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/service_label" />

            <TextView
                android:id="@+id/busServiceTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serviceBusTextFieldString"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/busLineTextFieldString" />

            <Spinner
                android:id="@+id/lineSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/startingLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star_loc_label" />

            <Spinner
                android:id="@+id/startingLocationSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/destinationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destination" />
        
        	<Spinner
        	    android:id="@+id/destinationSpinner"
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1" />
            
        </TableRow>
    </TableLayout>
    
        <Button
            android:id="@+id/alarmOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/alarm_options_label" 
            android:onClick="configureAlarmOptions" />

        <Button
            android:id="@+id/setAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/set_alarm_label"
            android:onClick="setAlarm" />

</LinearLayout>